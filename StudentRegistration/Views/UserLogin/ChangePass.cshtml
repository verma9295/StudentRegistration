@model StudentRegistration.Models.ChangePassword

@{
    ViewData["Title"] = "ChangePass";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h5 style="color:mediumseagreen;">@TempData["changePass"]</h5>
<h5>@ViewBag.msg</h5>

<section>
  <div class="mask d-flex align-items-center h-100 gradient-custom-3">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-9 col-lg-7 col-xl-6">
          <div class="card shadow" style="border-radius: 15px;background-color:aquamarine;height:430px;">
            <div class="card-body p-5">
              <h5 class="text-uppercase text-center mb-5">Change Password</h5>

<div class="row">
    <div class="form-outline mb-4">
        <form asp-action="ChangePass" asp-controller="UserLogin" method="post">
@*@Html.HiddenFor(x=>x.Id)*@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @*<label class="form-label">Old Password</label>*@
                <input asp-for="OldPass" class="form-control" placeholder="Old password" />
                <span asp-validation-for="OldPass" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="NewPass" class="form-control" placeholder="New password" />
                <span asp-validation-for="NewPass" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="ConfirmPass" class="form-control" placeholder="Confirm password" />
                <span asp-validation-for="ConfirmPass" class="text-danger"></span>
                @ViewBag.forgotError
             </div>
            <div class="d-flex justify-content-center">
                <input style="margin-top:5px;" type="submit" value="Change Password" class="form-control btn btn-primary" /> &nbsp;
            </div>
            <p class="text-center text-muted mt-4 mb-0"><a asp-action="Index1" class="fw-bold text-body">Back to Home</a></p>

        </form>
    </div>
</div>

</div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

