@model IEnumerable<StudentRegistration.Models.tbljoin>

@{
    ViewData["Title"] = "oneUserRecords";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h4 style="text-align:center;">Registration Details</h4>

<hr style="color:green;" />

<section style="background-color: #eee;">
  <div class="container py-4">

@foreach (var item in Model) {

    <div class="row">
      <div class="col-lg-3">
        <div class="card mb-3">
          <div class="card-body text-center">
            <img src="~/Images/@item.ProfileImage" class="rounded-circle" style="width: 180px;" />
            <h5 class="my-3">@Html.DisplayFor(modelItem => item.Name)</h5>
          </div>
        </div>
          <a asp-action="Create" asp-route-id="@item.Id">Edit</a> |
          <a onclick="return confirm('Are you sure you want to delete this?')" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
      </div>
      <div class="col-lg-6">
        <div class="card mb-4">
          <div class="card-body">
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Full Name</p>
              </div>
              <div class="col-sm-5">
                <p class="text-muted mb-0">@Html.DisplayFor(modelItem => item.Name)</p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Father Name</p>
              </div>
              <div class="col-sm-5">
                <p class="text-muted mb-0">@Html.DisplayFor(modelItem => item.fName)</p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Category</p>
              </div>
              <div class="col-sm-5">
                <p class="text-muted mb-0">@Html.DisplayFor(modelItem => item.Category)</p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Registration</p>
              </div>
              <div class="col-sm-5">
                <p class="text-muted mb-0">@Html.DisplayFor(modelItem => item.regno)</p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Age</p>
              </div>
              <div class="col-sm-5">
                <p class="text-muted mb-0">@Html.DisplayFor(modelItem => item.Age)</p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Gender</p>
              </div>
              <div class="col-sm-5">
                <p class="text-muted mb-0">@Html.DisplayFor(modelItem => item.Gender)</p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">State</p>
              </div>
              <div class="col-sm-5">
                <p class="text-muted mb-0">@Html.DisplayFor(modelItem => item.State)</p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">City</p>
              </div>
              <div class="col-sm-5">
                <p class="text-muted mb-0">@Html.DisplayFor(modelItem => item.City)</p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Email</p>
              </div>
              <div class="col-sm-5">
                <p class="text-muted mb-0">@Html.DisplayFor(modelItem => item.Email)</p>
              </div>
            </div>

          </div>
        </div>
      </div>
    </div>
    }
  </div>
</section>

